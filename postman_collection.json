                            }
                        ],
                        "url": {
                            "raw": "http://localhost:5000/api/auth/user",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "5000",
                            "path": [
                                "api",
                                "auth",
                                "user"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Tasks",
            "item": [
                {
                    "name": "Get Tasks",
